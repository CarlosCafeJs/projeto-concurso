generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]  // Adicione isso
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Questao {
  id                         Int           @id
  enunciado                  String
  assunto                    String
  nivel_dificuldade          String
  referencia                 String
  explicacao                 String
  tags                       String[]
  data_criacao               String
  origem                     String
  categoria_concurso         String
  peso                       Int
  categoria_assunto          String
  tempo_resposta_estipulado String
  alternativas               Alternativa[]
  comentarios                Comentario[]
}

model Alternativa {
  id         Int     @id @default(autoincrement())
  resposta   String
  correta    Boolean
  questaoId  Int
  questao    Questao @relation(fields: [questaoId], references: [id])
}

model Comentario {
  id             Int     @id @default(autoincrement())
  usuario        String
  data_comentario String
  comentario     String
  questaoId      Int
  questao        Questao @relation(fields: [questaoId], references: [id])
}
